{
  "name": "calendar-backend",
  "version": "1.0.0",
  "description": "Backend for Calendar Application",
  "main": "dist/index.js",
  "scripts": {
    "start": "node dist/index.js",
    "start:prod": "cross-env NODE_ENV=production node dist/index.js",
    "dev": "nodemon --exec ts-node src/index.ts",
    "dev:local": "cross-env NODE_ENV=development KAFKA_ENABLED=false nodemon --exec ts-node src/index.ts",
    "build": "tsc",
    "build:clean": "rm -rf dist && npm run build",
    "build:watch": "tsc --watch",
    "lint": "eslint src/**/*.ts --fix",
    "lint:check": "eslint src/**/*.ts",
    "type-check": "tsc --noEmit",
    "test": "cross-env NODE_ENV=test jest",
    "test:watch": "cross-env NODE_ENV=test jest --watch",
    "test:coverage": "cross-env NODE_ENV=test jest --coverage",
    "test:unit": "cross-env NODE_ENV=test jest tests/unit",
    "test:integration": "cross-env NODE_ENV=test jest tests/integration",
    "test:ci": "cross-env NODE_ENV=test jest --ci --coverage --watchAll=false",
    "test:debug": "cross-env NODE_ENV=test node --inspect-brk node_modules/.bin/jest --runInBand",
    "prisma:generate": "prisma generate",
    "prisma:migrate": "prisma migrate dev",
    "prisma:migrate:test": "cross-env NODE_ENV=test DATABASE_URL=\"mysql://root:password@localhost:3306/calendar_test\" prisma migrate dev --name test-migration",
    "prisma:reset": "prisma migrate reset --force",
    "prisma:reset:test": "cross-env NODE_ENV=test DATABASE_URL=\"mysql://root:password@localhost:3306/calendar_test\" prisma migrate reset --force",
    "prisma:studio": "prisma studio",
    "prisma:studio:test": "cross-env NODE_ENV=test DATABASE_URL=\"mysql://root:password@localhost:3306/calendar_test\" prisma studio",
    "prisma:format": "prisma format",
    "db:setup": "npm run prisma:migrate && npm run prisma:migrate:test",
    "db:setup:docker": "docker-compose up -d mysql && sleep 10 && npm run prisma:migrate && npm run prisma:migrate:test",
    "db:reset": "npm run prisma:reset && npm run prisma:reset:test",
    "mysql:local": "mysql -u root -p -e \"CREATE DATABASE IF NOT EXISTS calendar_dev; CREATE DATABASE IF NOT EXISTS calendar_test;\"",
    "mysql:check": "mysql -u root -p -e \"SHOW DATABASES;\""
  },
  "dependencies": {
    "@prisma/client": "^5.11.0",
    "@types/bcryptjs": "^2.4.6",
    "bcryptjs": "^3.0.2",
    "cors": "^2.8.5",
    "dotenv": "^16.0.3",
    "express": "^4.18.2",
    "joi": "^17.13.3",
    "jsonwebtoken": "^9.0.0",
    "kafkajs": "^2.2.4",
    "morgan": "^1.10.0",
    "uuid": "^9.0.0"
  },
  "devDependencies": {
    "@types/cors": "^2.8.13",
    "@types/express": "^4.17.17",
    "@types/joi": "^17.2.3",
    "@types/jsonwebtoken": "^9.0.1",
    "@types/morgan": "^1.9.4",
    "@types/node": "^18.19.110",
    "@types/jest": "^29.5.0",
    "@types/supertest": "^2.0.12",
    "@types/uuid": "^9.0.0",
    "cross-env": "^7.0.3",
    "jest": "^29.5.0",
    "nodemon": "^2.0.22",
    "prisma": "^5.11.0",
    "supertest": "^6.3.3",
    "ts-jest": "^29.1.0",
    "ts-node": "^10.9.1",
    "typescript": "^5.0.4"
  },
  "keywords": [
    "calendar",
    "api",
    "typescript",
    "express",
    "prisma"
  ],
  "author": "",
  "license": "ISC"
}